<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:colorPrimaryDark">@color/theme</item>
        <item name="android:colorPrimary">@color/theme</item>
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Material.ActionBar.Solid">
        <item name="android:background">@color/theme</item>
         <item name="android:logo">@drawable/actionbar_icon</item>>
        <item name="android:displayOptions">showHome|showTitle|useLogo</item>
	</style>

</resources>